using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp1
{
    class Program
    {
        static void Main(string[] args)
        {

            Console.WriteLine("Введите колчиство элементов массива:");
            int Acnt = int.Parse (Console.ReadLine());
            int [] A = new int[Acnt];
            for (int i = 0; i < A.Length; i++)
            {
                Console.WriteLine($"Введи элемент массива с индексом {i}:");
                A[i] = int.Parse(Console.ReadLine());
            }

            Console.WriteLine("Вывод максимального элемента массива:");
            Console.WriteLine(A.Max());
            Console.WriteLine("Вывод массива в обратном порядке:");
            for (int i = A.Length - 1; i >= 0 ; i--)
            {
                Console.WriteLine(A[i]);
            }
            Console.ReadKey();
        }
    }
}
