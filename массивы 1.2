using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace ConsoleApp1
{
    class Program
    {
        static void Main(string[] args)
        {

            Console.WriteLine("Введите колчиство элементов массива:");
            int Acnt = int.Parse (Console.ReadLine());
            int [] A = new int[Acnt];
            int sum = 0;
            int mid;

            for (int i = 0; i < A.Length; i++)
            {
                Console.WriteLine($"Введите элемент массива с индексом {i}:");
                A[i] = int.Parse(Console.ReadLine());
            }

            for (int i = 0; i < A.Length; i++)
                sum += A[i];
                mid = sum / A.Length;    

            
            for (int i = 0; i < A.Length; i++)
            {

                if (A[i] == 0)
                {

                    A[i] = mid;

                }

            }
            Console.WriteLine("Вывод массива с заменёнными нулевыми(округлёнными до целого) элементами:");
            for (int i = 0; i < A.Length; i++)
            { Console.WriteLine(A[i]); }
            Console.ReadKey();
        }
    }
}
